server {
    listen                  443 ssl http2;
    listen                  [::]:443 ssl http2;
    server_name             {{ domain }};

    # SSL
    {%if self_signed == true %}
    ssl_certificate /etc/ssl/certs/{{ domain }}.crt;
    ssl_certificate_key /etc/ssl/private/{{ domain }}.pem;
    {% else %}
    include                 /etc/nginx/nginxconfig.io/letsencrypt.conf;
    ssl_certificate         /etc/letsencrypt/live/{{ domain }}/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/{{ domain }}/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/{{ domain }}/chain.pem;
    {% endif %}
    include                 /etc/nginx/nginxconfig.io/ssl.conf;

    # security
    include                 /etc/nginx/nginxconfig.io/security.conf;

    # logging
    access_log              /var/log/nginx/access-{{ domain }}.log combined buffer=512k flush=1m;
    error_log               /var/log/nginx/error-{{ domain }}.log warn;

    # reverse proxy
    location / {
        proxy_pass            http://127.0.0.1:5000;
        proxy_set_header Host $host;
        include               /etc/nginx/nginxconfig.io/proxy.conf;
    }

    # additional config
    include nginxconfig.io/general.conf;
}

# subdomains redirect
server {
    listen                  443 ssl http2;
    listen                  [::]:443 ssl http2;
    server_name             *.{{ domain }};

    # SSL
    {%if self_signed == true %}
    ssl_certificate /etc/ssl/certs/{{ domain }}.crt;
    ssl_certificate_key /etc/ssl/private/{{ domain }}.pem;
    {% else %}
    include                 /etc/nginx/nginxconfig.io/letsencrypt.conf;
    ssl_certificate         /etc/letsencrypt/live/{{ domain }}/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/{{ domain }}/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/{{ domain }}/chain.pem;
    {% endif %}
    include                 /etc/nginx/nginxconfig.io/ssl.conf;
    
    return                  301 https://{{ domain }}$request_uri;
}

# HTTP redirect
server {
    listen      80;
    listen      [::]:80;
    server_name {{ domain }};

    {%if not self_signed == true %}
    include     /etc/nginx/nginxconfig.io/letsencrypt.conf;
    {% endif %}

    {%if listen_http == true %}
    # reverse proxy
    location / {
        proxy_pass            http://127.0.0.1:5000;
        proxy_set_header Host $host;
        include               /etc/nginx/nginxconfig.io/proxy.conf;
    }

#    location / {
#        return 301 https://{{ domain }}$request_uri;
#    }
    {%else %}
    location / {
        return 301 https://{{ domain }}$request_uri;
    }
    {% endif %}

}